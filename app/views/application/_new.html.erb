<div id="register-view">
    <div class="page-header">
      <h1>Register</h1>
    </div>
<%= form_for :user, :class=> 'form-horizontal' do %>
    <div class="control-group">
      <!-- Username -->
      <%= label_tag :username, nil, :class => 'control-label'%>
      <div class="controls">
        <%= text_field_tag :username, nil, :placeholder => 'username' %>
        <p class="help-block">Username can contain any letters or numbers, without spaces</p>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <%= label_tag :email, nil, :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, nil, :placeholder => 'ladonna@example.com'%>
        <p class="help-block">Please provide your E-mail</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Password-->
      <%= label_tag :password, nil, :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password %>
        <p class="help-block">Password should be at least 4 characters</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Password confirmation -->
      <%= label_tag :password_confirmation, 'Confirm', :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password_confirmation %>
        <p class="help-block">Please confirm password</p>
      </div>
    </div>

    <div class="form-actions">
      <!-- Submit -->
      <%= submit_tag 'Register', :class => 'btn btn-primary' %>
      <div class="clear"></div>
      </div>
      <% end %>
      <div class="clear"></div>
</div>
